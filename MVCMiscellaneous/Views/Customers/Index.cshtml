@model IEnumerable<MVCMiscellaneous.Models.Customer>
@{
    ViewBag.Title = "Customers";
}

<style>
    tr, td, th {
        border: 1px solid red;
        padding: 5px;
    }
    th {
        color: white;
        background-color: black;
        font-weight: bold;
        border: 1px solid red;
    }
    td > a {
        font-weight: bold;
    }
</style>
<h2>Customers</h2>


@{
    if (!Model.Any())
    {
        <text>WE HAVE CURRENTLY NO CUSTOMERS!</text>
    }
    else
    {
        var index = 1;
        <table>
            <tr>
                <th>Customers</th>
                <th>Discount Rate</th>
                <th>Membership Type</th>
            </tr>
            @foreach (var customer in Model)
                {
                <tr>
                    <td>@Html.ActionLink(@customer.Name, "Details", "Customers", new { id = index }, null)</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    <td>@customer.MembershipType.Title</td>
                </tr>
                index++;
            }
        </table>
    }
}
